{% extends 'bajoWebMpa:/layout/center' %}

{% block body %}
{% cmp 'h3', displayHeading=3, margin='bottom3' %}{{ 'Signout'|t }}{% endcmp %}
{% cmp 'div', display='flex', justifyContent='center' %}
  {% cmp 'p', width=50 %}
  {{ 'You\'re about to sign out. This means your session will be cleared and you\'ll be asked for your credential again in case you want to access any protected pages and resources.<br /><br />Are your sure?'|t }}
  {% endcmp %}
{% endcmp %}
{% cmp 'form', method='POST', action=routePath('sumba:/signout'), margin='bottom3' %}
  {% cmp 'input', type='hidden', name='referer', value=form.referer %}{% endcmp %}
  {% cmp 'button', type='submit', variant='primary' %}
  {{ 'Yes, sign me out now!'|t }}
  {% endcmp %}
{% endcmp %}
{% endblock %}

{% block css %}{% endblock %}
{% block script %}{% endblock %}