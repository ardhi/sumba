    "name": "token",
    "type": "string",
    "maxLength": 50,
    "hidden": true,
    "index": true
  }, {
    "name": "email",
    "type": "string",
    "maxLength": 100,
    "required": true,
    "index": true,
    "rules": ["email"]
  }, {
    "name": "firstName",
    "type": "string",
    "maxLength": 50,
    "required": true,
    "index": true
  }, {
    "name": "lastName",
    "type": "string",
    "maxLength": 50,
    "required": true,
    "index": true
  }],
  "globalRules": [{ "rule": "trim", "fields": ["username", "firstName", "lastName"] }],
