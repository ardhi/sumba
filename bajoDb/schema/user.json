{
  "properties": [{
    "name": "username",
    "type": "string",
    "minLength": 5,
    "maxLength": 50,
    "rules": ["alphanum"]
  }, {
    "name": "password",
    "type": "string",
    "minLength": 8,
    "maxLength": 50,
    "hidden": true
  }, {
    "name": "token",
    "type": "string",
    "maxLength": 50,
    "hidden": true,
    "index": true
  }, {
    "name": "email",
    "type": "string",
    "maxLength": 100,
    "required": true,
    "index": true,
    "rules": ["email"]
  }, {
    "name": "firstName",
    "type": "string",
    "maxLength": 50,
    "required": true,
    "index": true
  }, {
    "name": "lastName",
    "type": "string",
    "maxLength": 50,
    "required": true,
    "index": true
  }],
  "globalRules": [{ "rule": "trim", "fields": ["username", "firstName", "lastName"] }],
  "indexes": [{
    "fields": ["username", "siteId"],
    "unique": true
  }, {
    "fields": ["email", "siteId"],
    "unique": true
  }],
  "feature": {
    "sumbaAddress": true,
    "sumbaSocial": true,
    "sumbaStatus": { "default": "UNVERIFIED" },
    "sumbaSiteId": true,
    "createdAt": true,
    "updatedAt": true
  }
}